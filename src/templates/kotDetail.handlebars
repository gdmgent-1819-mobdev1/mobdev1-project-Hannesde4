        <div id="kotDetail-image1" class="kot-file-upload">
            <img src="{{fotoArray1}}" alt="">
        </div>
        <div class="kot-upload-small-collect">
            <div id="kotDetail-image2" class="kot-file-upload small">
                <img src="{{fotoArray2}}" alt="">
